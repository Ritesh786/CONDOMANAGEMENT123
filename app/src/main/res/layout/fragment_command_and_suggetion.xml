<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.infoservices.lue.fragments.CommandAndSuggetionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
    <EditText
        android:id="@+id/edit_name_cs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/green"
        android:background="@android:color/white"
        android:hint="Name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="@android:color/darker_gray"/>
        <EditText
            android:id="@+id/edit_sub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/green"
            android:background="@android:color/white"
            android:hint="Subject"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray"/>
        <EditText
            android:id="@+id/edit_email_cs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/green"
            android:background="@android:color/white"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray"/>
        <EditText
            android:id="@+id/edit_coment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textColor="@color/green"
            android:background="@android:color/white"
            android:hint="Comments and Suggetions"
            android:gravity="top"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray"/>
        <Button
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@drawable/green_button"
            android:text="Send"
            />
    </LinearLayout>
</RelativeLayout>
