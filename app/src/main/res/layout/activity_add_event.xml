<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.infoservices.lue.condomanagement.AddEvent">
<include
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/header_add_event"
    android:layout_alignParentTop="true"
    layout="@layout/header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_add_event">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY">
        <ImageView
            android:id="@+id/event_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/lobo2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/edit_img_add_event"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:src="@drawable/edit_icon"/>
        </LinearLayout>
</FrameLayout>
    <EditText
        android:id="@+id/title_event_ae"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangleshape_white"
        android:hint="Title of Event"
        android:textColor="@color/green"
        android:textColorHint="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <EditText
        android:id="@+id/purpose_event_ae"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangleshape_white"
        android:hint="Purpose of Event"
        android:gravity="left"
        android:textColor="@color/green"
        android:textColorHint="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/date_event_ae"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/rectangleshape_white"
        android:textColor="@color/green"
        android:hint="-- Select Date --"
        android:textColorHint="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/from_time_event_ae"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/rectangleshape_white"
        android:hint="-- Select Time From --"
        android:textColor="@color/green"
        android:textColorHint="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/to_time_event_ae"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/rectangleshape_white"
        android:hint="-- Select Time To --"
        android:textColorHint="@android:color/white"
        android:textColor="@color/green"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <EditText
        android:id="@+id/description_event_ae"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangleshape_white"
        android:textColor="@color/green"
        android:hint="Description of Event"
        android:gravity="left"
        android:textColorHint="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/add_event_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/yellow_button"
        android:layout_alignParentBottom="true"
        android:text="Add Event"/>
</LinearLayout>
    </ScrollView>
</RelativeLayout>
