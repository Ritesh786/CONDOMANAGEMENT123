<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical"
             tools:context="com.infoservices.lue.fragments.EditProfileFregment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--<ImageView
        android:id="@+id/uodate_image_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/userprofileicon2"/>-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/uodate_image_up"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/userprofileicon2"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/edit_icon"/>
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical">
<EditText
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="@drawable/rectangleshape_white"
    android:hint="enter new name"
    android:textColorHint="@android:color/white"
    android:textColor="@color/green"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_marginTop="3dp"
   />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/rectangleshape_white"
            android:hint="enter new email"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/white"
            android:textColor="@color/green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="3dp"/>
        <EditText
            android:id="@+id/edit_unit_no2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/rectangleshape_white"
            android:hint="enter new unit no"
            android:inputType="textCapCharacters"
            android:textColorHint="@android:color/white"
            android:textColor="@color/green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/rectangleshape_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="+60"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>

            <EditText
                android:id="@+id/edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="enter new mobile"
                android:inputType="number"
                android:textColorHint="@android:color/white"
                android:background="@drawable/rectanglenew"
                android:textColor="@color/green"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_margin="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/rectangleshape_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="+60"
                android:id="@+id/textView4" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
    <EditText
        android:id="@+id/edit_home_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="enter new home contact"
        android:inputType="number"
        android:background="@drawable/rectanglenew"
        android:textColorHint="@android:color/white"
        android:textColor="@color/green"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="3dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/rectangleshape_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_margin="3dp"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="+60"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
    <EditText
        android:id="@+id/edit_emergency_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="enter new emergency contact"
        android:inputType="number"
        android:textColorHint="@android:color/white"
        android:textColor="@color/green"
        android:background="@drawable/rectanglenew"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="3dp"/>
            </LinearLayout>
        <EditText
            android:id="@+id/edit_relation"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/rectangleshape_white"
            android:inputType="textPostalAddress"
            android:hint="enter new relation"
            android:textColorHint="@android:color/white"
            android:textColor="@color/green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="3dp"/>
        <EditText
            android:id="@+id/edit_car2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/rectangleshape_white"
            android:inputType="textPostalAddress"
            android:hint="enter new Car no"
            android:textColorHint="@android:color/white"
            android:textColor="@color/green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="3dp"/>
        <EditText
            android:id="@+id/edit_maitainance2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/rectangleshape_white"
            android:inputType="textPostalAddress"
            android:hint="enter new maintainance fee"
            android:textColorHint="@android:color/white"
            android:textColor="@color/green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="3dp"/>
        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="enter valid Address"
            android:padding="10dp"
            android:background="@drawable/rectangleshape_white"
            android:gravity="left"
            android:textColorHint="@android:color/white"
            android:textColor="@color/green"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/update_pro_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Update"
        android:background="@drawable/yellow_button"/>
    </LinearLayout>
</ScrollView>
