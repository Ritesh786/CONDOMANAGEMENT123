<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.infoservices.lue.fragments.PreRegistationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tanent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Chandan Kumar Singh"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        />
            <TextView
                android:id="@+id/unit_no_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Number :- 1"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/green"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/visitor_name2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:hint="Visitor's Full Name"
            android:nextFocusForward="@+id/id1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/green"
            android:paddingRight="20dp"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>

        <EditText
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:hint="enter car number"
            android:nextFocusForward="@+id/id2"
            android:maxLength="8"
            android:gravity="center"
            android:textColor="@color/green"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>


        <LinearLayout
            android:id="@+id/lll_nric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.23"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="NRIC No:-"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:textColorHint="@android:color/white"
            />
        <EditText
            android:id="@+id/id4"
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:hint="xxxxxx"
            android:inputType="date"
            android:nextFocusForward="@+id/id5"
            android:maxLength="6"
            android:gravity="center"
            android:textColor="@color/green"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>

        <EditText
            android:id="@+id/id5"
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:hint="xx"
            android:capitalize="words"
            android:maxLength="2"
            android:nextFocusForward="@+id/id6"
            android:gravity="center"
            android:textColor="@color/green"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>

        <EditText
            android:id="@+id/id6"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:hint="xxxx"
            android:capitalize="words"
            android:maxLength="4"
            android:gravity="center"
            android:textColor="@color/green"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>

    </LinearLayout>
        <EditText
            android:id="@+id/edit_passport_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:hint="enter passport number"
            android:nextFocusForward="@+id/id2"
            android:maxLength="12"
            android:gravity="center"
            android:textColor="@color/green"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>
    <TextView
        android:id="@+id/pre_from_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:hint="-- Select From Time --"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:textColorHint="@android:color/white"
        android:background="@drawable/rectangleshape_white"/>

        <TextView
            android:id="@+id/pre_to_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:hint="-- Select To Time --"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:textColorHint="@android:color/white"
            android:background="@drawable/rectangleshape_white"/>

        <TextView
        android:id="@+id/pre_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:hint="-- Select Date --"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:textColorHint="@android:color/white"
        android:background="@drawable/rectangleshape_white"/>

        <LinearLayout
        android:id="@+id/ll_pre_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dip"
            android:indeterminateDrawable="@drawable/myprocess"
            android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processing..."
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:id="@+id/textView3" />
        </LinearLayout>

    <Button
        android:id="@+id/apply_for_pre_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/yellow_button"
        android:layout_alignParentBottom="true"
        android:text="Register your visitors now"/>
    <Button
        android:id="@+id/list_pre_resi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_button"
        android:layout_alignParentBottom="true"
        android:text="List of approved Registration"/>
    </LinearLayout>
</ScrollView>
