<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.infoservices.lue.fragments.ConfirmFragment">
     <TextView
    android:id="@+id/pro_text_head"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:textSize="20sp"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:text="BILLING INFORMATION"
    />
    <LinearLayout
        android:id="@+id/ll_con_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/pro_text_head"
        android:background="@color/colorPrimaryLight">
     <RelativeLayout
         android:layout_width="0dp"
         android:layout_height="250dp"
         android:layout_weight=".3">
         <!--<ImageView
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_alignParentTop="true"
             android:layout_marginTop="20dip"
             android:layout_centerHorizontal="true"
             android:src="@drawable/userprofileicon2"/>-->
         <de.hdodenhof.circleimageview.CircleImageView
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/confirm_image"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:layout_centerInParent="true"
             android:src="@drawable/userprofileicon2"
             app:civ_border_width="2dp"
             app:civ_border_color="#FFFFFF"/>
     </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/confirm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:text="Chandan Singh"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/green"
            android:text="Owner's Name"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/confirm_unit_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:text="T2-L5-E"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/green"
            android:text="Unit Number"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/confirm_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:text="C-177,Taigore Garden,New Delhi"
            android:gravity="left"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/green"
            android:text="Billing Address"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:background="@drawable/black_button"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text=" Change "
            android:textSize="17dp"/>

    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/ll_con_fragment"
        android:layout_marginTop="?attr/actionBarSize"
        android:textColor="@android:color/black"
        android:background="@drawable/yellow_button"
        android:text="Confirm"/>
</RelativeLayout>
